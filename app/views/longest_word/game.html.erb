<h1>LongestWord#game</h1>

<h2>Your letters</h2>
  <%@random_letters.each do |letter| %>
   <%= "#{letter.upcase}"%>
  <%end%>

  <h2>Take your best shot!</h2>

  <form action="/score">
      <input type="text" id="word" name="player_word" placeholder="Enter a word using the letters above">
      <input type="hidden" id="start_time" name="start_time" value="<%= @start_time %>">
      <input type="hidden" id="" name="score" value="<%= @score %>">
      <input type="hidden" id="" name="grid" value="<%= @random_letters.join %>">
      <input type="submit" value="Go!">
  </form>

