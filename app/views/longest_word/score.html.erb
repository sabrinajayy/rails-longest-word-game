<div class="container">
  <div class="row">
    <div class="col-xs-12">
    <div class="main-title text-center">
      <h1>Scrambld</h1>
        <%#= image_tag ("https://static.comicvine.com/uploads/square_medium/11/110802/3036954-professor+barabas.png"), :class => "professor-img" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="game text-center">
        <h2 class="game-attempt"><%= @word %></h2>

        <h3>Score: <strong><%= @score[:score] %></strong></h3>

        <p class="professor-message"><%=@score[:message]%>.</p>

        <%= link_to 'Play Again', root_url, class: 'btn btn-primary game-btn' %>
      </div>
    </div>
  </div>
</div>
